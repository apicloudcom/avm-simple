<template>
    <scroll-view class="main" scroll-y>
        <view style={'height:'+swiperHeight+'px;'}>
            <swiper class="swiper" autoplay circular onchange={this.onchange}>
                <swiper-item v-for="(_item,_index) in picList" data-index={_index} onclick={this.ontapimg}>
                    <image class="img" placeholder="../../image/default_square.png" src={_item} mode="aspectFit" thumbnail="false"></image>
                </swiper-item>
            </swiper>
            <view class="indicator">
                <view v-for="(item,index) in picList" class={'indicator-item '+(index==current?'indicator-item-active':'indicator-item-normal')} ></view>
            </view>
        </view>
    </scroll-view>
</template>
<script>
export default{
    name:'detail',
    data(){
        return{
            swiperHeight: 200,
            picList: [],
            current: 0
        }
    },
    methods:{
        apiready() {
            this.data.swiperHeight = 200/320*api.winWidth;
            this.data.picList = ['../../image/img1.jpeg','../../image/img2.jpeg','../../image/img3.jpeg'];
        },
        ontapimg(e){
            api.alert({
                msg: '点击了第' + e.currentTarget.dataset.index + '项'
            });
        },
        onchange(e){
            this.data.current = e.detail.current;
        }
    }
}
</script>
